
<div class="max-w-4xl mx-auto my-[50px] bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
  <%= image_tag @vacancy.logo, class: "rounded-t-lg logo_img" %>
  <div class="p-5">
    <h5 class="my-4 text-4xl font-bold tracking-tight text-gray-700 dark:text-white"><%= @vacancy.position %></h5>
    <h5 class="mb-2 text-2xl tracking-tight text-gray-500 dark:text-white"><%= @vacancy.salary %> ₴</h5>
    <div class="flex items-center my-4">
      <span class="mb-2 text-2xl tracking-tight text-red-500"><%= @vacancy.company %></span>
      <span class="mx-4 mb-2 text-2xl tracking-tight text-black"><%= @vacancy.location %></span>
      <%= link_to root_path,  class: "" do %>
        <%= image_tag "map-icon.png", size: "32x32" %>
      <% end %>
    </div>
    <div class="flex justify-between">
      <button type="button" class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2">Бонуси / премії</button>
      <button type="button" class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2">Корпоративні заходи</button>
      <button type="button" class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2">Бонуси / премії</button>
      <button type="button" class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2">В офісі/на місці</button>
      <button type="button" class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2">Житло</button>
    </div>
    <p class="my-4 text-2xl font-bold text-black dark:text-gray-400">Детальна інформація:</p>
    <p class="mb-3 text-2xl font-normal text-black dark:text-gray-400"><%= @vacancy.description %></p>
    <p class="my-4 text-2xl font-bold text-black dark:text-gray-400">Контакти:</p>
    <p class="mb-3 text-2xl font-normal text-black dark:text-gray-400"><%= @vacancy.user.phone %></p>
    <p class="mb-3 text-2xl font-normal text-black dark:text-gray-400"><%= @vacancy.user.first_name %> <%= @vacancy.user.last_name %></p>
    <div class="flex justify-between my-4 ">
      <a href="#" class="inline-flex items-center px-3.5 py-3 text-xl font-medium text-center text-white bg-red-500 rounded-lg hover:bg-white hover:text-red-500 hover:border hover:border-red-500 focus:ring-4 focus:outline-none focus:ring-red-600">
        Відгукнутись
      </a>
      <% if @vacancy.user == current_user %>
        <%= button_to "Видалити вакансію", @vacancy, :method => :delete, class: "inline-flex items-center px-3.5 py-3 text-xl font-medium text-center text-white bg-red-500 rounded-lg hover:bg-white hover:text-red-500 hover:border hover:border-red-500 focus:ring-4 focus:outline-none focus:ring-red-600" %>
      <% end %>
    </div>
  </div>
</div>

