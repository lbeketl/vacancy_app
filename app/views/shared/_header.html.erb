      <div class="items-center justify-between">
        <ul class="flex p-4 font-medium bg-red-500 border-gray-700 rounded-lg">
          <li>
            <%= link_to "Про нас", about_path, class: "navbar-link" %>
          </li>
          <li>
            <%= link_to "Контакти", contact_path, class: "navbar-link" %>
          </li>
          <li>
            <%= link_to "Вакансії", vacancies_path, class: "navbar-link" %>
          </li>
        </ul>
